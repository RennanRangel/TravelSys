@{
    ViewData["Title"] = "Travel - Live & Travel";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true">
}



<section class="hero">
    <div class="hero-background">
        <img src="~/images/Rectangle 31.png" alt="">
    </div>
    <div class="container">
        <div class="hero-content">
            <h1 class="hero-title">Helping Others</h1>
            <h2 class="hero-subtitle">LIVE & TRAVEL</h2>
            <p class="hero-description">Special offers to suit your plan</p>
        </div>

        <div class="search-card">
            <div class="search-tabs">
                <button class="tab-btn active" data-tab="flights">
                    <i class="fas fa-plane"></i>
                    Flights
                </button>
                <button class="tab-btn" onclick="window.location.href='/Hotels/Index'">
                    <i class="fas fa-hotel"></i>
                    Stays
                </button>
            </div>

            <div class="search-content">
                <div class="search-form active" id="flights-form">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="from">From - To</label>
                            <div class="input-wrapper">
                                <i class="fas fa-map-marker-alt"></i>
                                <input type="text" id="from" placeholder="Lahore - Karachi">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="trip">Trip</label>
                            <div class="input-wrapper">
                                <i class="fas fa-exchange-alt"></i>
                                <select id="trip">
                                    <option>Return</option>
                                    <option>One Way</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="depart">Depart - Return</label>
                            <div class="input-wrapper">
                                <i class="fas fa-calendar"></i>
                                <input type="text" id="depart" placeholder="07 Nov 22 - 13 Nov 22">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="passengers">Passenger - Class</label>
                            <div class="input-wrapper">
                                <i class="fas fa-user"></i>
                                <input type="text" id="passengers" placeholder="1 Passenger, Economy">
                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <label class="checkbox-label">
                            <input type="checkbox">
                            <span>Add Promo Code</span>
                        </label>
                        <button class="btn-primary" onclick="window.location.href='/Flights/Index'">
                            <i class="fas fa-paper-plane"></i>
                            Show Flights
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

